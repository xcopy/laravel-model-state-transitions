{
    "name": "xcopy/laravel-model-state-transitions",
    "description": "Manage state transitions for your Laravel models with role-based access control and automatic history tracking.",
    "keywords": [
        "php",
        "laravel",
        "state",
        "transition"
    ],
    "homepage": "https://github.com/xcopy/laravel-model-state-transitions",
    "license": "MIT",
    "authors": [
        {
            "name": "Kairat Jenishev",
            "email": "kairat.jenishev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^11.0||^12.0",
        "richan-fongdasen/eloquent-blameable": "^1.11",
        "spatie/laravel-package-tools": "^1.16",
        "xcopy/laravel-support": "dev-main"
    },
    "require-dev": {
        "larastan/larastan": "^3.9",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Jenishev\\Laravel\\ModelStateTransitions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jenishev\\Laravel\\ModelStateTransitions\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jenishev\\Laravel\\ModelStateTransitions\\ModelStateTransitionsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/xcopy/laravel-support"
        }
    ]
}
